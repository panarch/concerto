{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "definitions": {
        "barline": {
            "type": "object",
            "properties": {
                "tag": { 
                    "type": "string",
                    "enum": ["barline"]
                },
                "bar-style": {
                    "type": "string",
                    "enum": [
                        "regular",
                        "dotted",
                        "dashed",
                        "heavy",
                        "light-light",
                        "light-heavy",
                        "heavy-light",
                        "heavy-heavy",
                        "tick",
                        "short",
                        "none"
                    ]
                }
            },
            "required": ["tag", "bar-style"]
        },

        "print": {
            "type": "object",
            "properties": {
                "@new-page": { "type": "boolean" },
                "@new-system": { "type": "boolean" },
                "system-layout": {
                    "type": "object",
                    "properties": {
                        "top-system-distance": { "type": "number" },
                        "system-distance": { "type": "number" },
                        "system-margins": {
                            "type": "object",
                            "properties": {
                                "left-margin": { "type": "number" },
                                "right-margin": { "type": "number" }
                            }
                        }
                    }
                },
                "staff-layout": {
                    "type": "object",
                    "properties": {
                        "@number": { "type": "integer" },
                        "staff-distance": { "type": "number" }
                    },
                    "required": ["@number", "staff-distance"]
                }
            }
        },

        "note": {
            "type": "object",
            "properties": {
                "tag": {
                    "type": "string",
                    "enum": ["attributes", "note", "backup", "forward"]
                },
                "divisions": { "type": "integer" },
                "staves": { "type": "integer" },
                "clef": { 
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "@number": { "type": "integer" },
                            "sign": { "type": "string" },
                            "line": { "type": "integer" }
                        },
                        "required": ["sign", "line"]                        
                    }
                },
                "time": {
                    "type": "object",
                    "properties": {
                        "beats": { "type": "integer" },
                        "beat-type": { "type": "integer" },
                        "@symbol": { "type": "string" }
                    },
                    "required": ["beats", "beat-type"]
                },
                "key": {
                    "type": "object",
                    "properties": {
                        "fifths": { "type": "integer" },
                        "mode": { "type": "string" }
                    },
                    "required": ["fifths"]
                },
                "duration": { "type": "integer" },
                "type": { "type": "string" },
                "accidental": { 
                    "type": "string",
                    "enum": [
                        "sharp", "natural", "flat", "double-sharp", "sharp-sharp", "flat-flat",
                        "natural-sharp", "natural-flat", "quarter-flat", "quarter-sharp", "three-quarters-flat",
                        "three-quarters-sharp", "sharp-down", "sharp-up", "natural-down", "natural-up",
                        "flat-down", "flat-up", "triple-sharp", "triple-flat", "slash-quarter-sharp",
                        "slash-sharp", "slash-flat", "double-slash-flat", "sharp-1", "sharp-2",
                        "sharp-3", "sharp-5", "flat-1", "flat-2", "flat-3", "flat-4", "sori", "koron"
                    ]
                },
                "rest": { "type": "boolean" },
                "stem": { 
                    "type": "string",
                    "enum": ["up", "down"]
                },
                "chord": { "type": "boolean" },
                "beam": {
                    "type": "object",
                    "properties": {
                        "@number": { "type": "integer" },
                        "text": { 
                            "type": "string",
                            "enum": ["begin", "continue", "end", "forward hook", "backward hook"]
                        }
                    },
                    "required": ["@number", "text"]
                },
                "pitch": {
                    "type": "object",
                    "properties": {
                        "step": {
                            "type": "string",
                            "enum": ["A", "B", "C", "D", "E", "F", "G"]
                        },
                        "octave": { "type": "integer", "minimum": 0 },
                        "alter": { "type": "integer" }
                    },
                    "required": ["step", "octave"]
                },
                "dot": { "type": "integer", "minimum": 1 },
                "voice": { "type": "integer", "minimum": 1 },
                "staff": { "type": "integer", "minimum": 1 },
                "notations": {
                    "type": "object",
                    "properties": {
                        "fermata": {
                            "type": "object",
                            "properties": {
                                "@type": {
                                    "type": "string",
                                    "enum": ["upright", "inverted"]
                                }
                            },
                            "required": ["@type"]
                        },
                        "technical": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "tag": { "type": "string" }
                                },
                                "required": ["tag"]    
                            }
                        },
                        "articulations": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "tag": { "type": "string" }
                                },
                                "required": ["tag"]    
                            }
                        }
                    }
                }
            },
            "required": ["tag"]
        }
    },

    "type": "object",
    "properties": {
        "identification": {
            "type": "object",
            "properties": {
                "encoding": {
                    "type": "object",
                    "properties": {
                        "software": { "type": "string" },
                        "encoding-date" : { "type": "string" }
                    }
                }
            }
        },
        
        "defaults": {
            "type": "object",
            "properties": {
                "scaling": {
                    "type": "object",
                    "properties": {
                        "millimeters": { "type": "number" },
                        "tenths": { "type": "number" }
                    }
                },

                "page-layout": {
                    "type": "object",
                    "properties": {
                        "page-height": { "type": "number" },
                        "page-width": { "type": "number" },
                        "page-margins": {
                            "type": "array",
                            "items": [
                                {
                                    "type": "object",
                                    "properties": {
                                        "@type": {
                                            "type": "string",
                                            "enum": ["both", "odd", "even"]
                                        },
                                        "left-margin": { "type": "number" },
                                        "right-margin": { "type": "number" },
                                        "top-margin": { "type": "number" },
                                        "bottom-margin": { "type": "number" }
                                    },
                                    "required": ["@type"]
                                }
                            ]
                        },
                        "required": ["page-height", "page-width"]
                    }
                }
            }
        },

        "part-list": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "properties": {
                            "tag": {
                                "type": "string",
                                "enum": ["part-group"]
                            },
                            "@type": {
                                "type": "string",
                                "enum": ["start", "top"]
                            },
                            "@number": { "type": "integer" },
                            "group-symbol": { 
                                "type": "string",
                                "enum": ["none", "brace", "line", "bracket", "square"]
                            }
                        },
                        "required": ["tag", "@type"]
                    },
                    {
                        "type": "object",
                        "properties": {
                            "tag": {
                                "type": "string",
                                "enum": ["score-part"]
                            },
                            "@id": { "type": "string" },
                            "part-name": { "type": "string" },
                            "score-instrument": {
                                "type": "object",
                                "properties": {
                                    "@id": { "type": "string" },
                                    "instrument-name": { "type": "string" }
                                }
                            },
                            "midi-instrument": {
                                "type": "object",
                                "properties": {
                                    "@id": { "type": "string" },
                                    "midi-channel": { "type": "integer" },
                                    "midi-program": { "type": "integer" }
                                }
                            }
                        },
                        "required": ["tag", "@id"]
                    }
                ]
            }
        },

        "part": {
            "type": "array",
            "items": {
                "properties": {
                    "@id": { "type": "string" },
                    "measure": {
                        "type": "array",
                        "items": [
                            {
                                "type": "object",
                                "properties": {
                                    "@number": { "type": "integer" },
                                    "width": { "type": "number" },
                                    "barline": {
                                        "type": "object",
                                        "properties": {
                                            "left-barline": {
                                                "$ref": "#/definitions/barline"
                                            },
                                            "right-barline": {
                                                "$ref": "#/definitions/barline"
                                            }
                                        }
                                    },
                                    "print": {
                                        "$ref": "#/definitions/print"
                                    },
                                    "note": {
                                        "type": "array",
                                        "items": {
                                            "$ref": "#/definitions/note"
                                        }
                                    }
                                },
                                "required": ["@number", "width", "barline", "note"]
                            }
                        ]
                    }
                }
            }
        }
    }
}
